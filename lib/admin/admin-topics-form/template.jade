#topic-wrapper
  - if (tags.length == 0)
    if (user.staff)
      p.alert.alert-danger.text-center!=t('admin-topics-form.alert.no-tags')
      p.text-center
        a.btn.btn-lg.btn-primary.create-tag(href=urlBuilder.for('admin.tags.create', {forum: forum.name}))=t('admin-tags-form.title.create')
    else
      p.alert.alert-danger.text-center=t('admin-topics-form.alert.no-tags.no-staff')
  - else
    h2= t(form.title)
    include commands
    .topic-admin
      form(action=form.action, method="post", role="form", autocomplete="off", novalidate, autovalidate='autovalidate', autosubmit='autosubmit')
        input(type='hidden', name='_topic_id_', value=topic.id)
        - if (forum)
          input(type='hidden', name='forum', value=forum.id)
        ul.form-messages
        .form-group
          label= t('admin-topics-form.label.mediaTitle')
          input.form-control(type='text', id="mediaTitle", name='mediaTitle', placeholder=t('admin-topics-form.label.mediaTitle'), value=topic.mediaTitle, validate='required')
        .form-group
          label= t('admin-topics-form.label.tag')
          select.form-control(name='tag', validate='required')
            - each tag in tags
              option(selected= topic.tag ? tag.hash === topic.tag.hash : false, value=tag.hash)= tag.name
        .form-group
          label= t('admin-topics-form.label.topicId')
          input.form-control(type='text', id="topicId", name='topicId', placeholder=t('admin-topics-form.label.topicId'), value=topic.topicId)
        .form-group
          label= t('admin-topics-form.label.cover') + ' URL'
          input.form-control(type='text', id="coverUrl", name='coverUrl', placeholder=t('admin-topics-form.placeholder.cover'), value=topic.coverUrl, validate='url')
        .form-group
          label= t('admin-topics-form.label.author')
          input.form-control(type='text', id="topicAuthor", name='topicAuthor', placeholder='John Doe', value=topic.author, validate='author')
        .form-group
          label= t('admin-topics-form.label.author') + ' URL'
          input.form-control(type='text', id="authorUrl", name='authorUrl', placeholder='http://en.wikipedia.org/wiki/John_Doe', value=topic.authorUrl, validate='url')
        .form-group
          label= t('admin-topics-form.label.votable')
          .votable-toggle
        .form-group.hide
          label= t('admin-topics-form.label.clause-truncation-text')
          input.form-control(type='text', name='bodyTruncationText', placeholder=t('common.read-more'), value=topic.bodyTruncationText)
        .form-group
          label= t('admin-topics-form.label.source')
          input.form-control(type='url', name='source', placeholder=t('admin-topics-form.placeholder.source'), value=topic.source, validate='url')
        .form-group
          label= t('admin-topics-form.label.summary')
          textarea.form-control(name='body')= topic.body
        .form-group.closingAt
          label= t('admin-topics-form.label.closingAt')
          - var closingAt = ''
          - var closingAtTime = ''
          - if (topic.closingAt)
            - closingAt = new Date(topic.closingAt)
            - var closingAtTime = moment(closingAt).format('H:mm')
            - closingAt = closingAt.getFullYear() + '/' + (closingAt.getMonth() + 1) + '/' + closingAt.getDate()
          div
            .input-group
              input.form-control(name='closingAt', readonly=true, value=closingAt)
              span.input-group-addon.clear-closingAt
                i.glyphicon.glyphicon-remove
            .input-group
              input.form-control(name='closingAtTime', value=closingAtTime, placeholder='hh:mm', validate='time')
        .form-group
          label=t('admin-topics-form.label.resources')
          .topic-links
            - if (topic.links && topic.links.length)
              - each link, id in topic.links
                include link
          div
            a.add-link.btn.btn-info(href='#')
              = t('admin-topics-form.button.add-link')
          span.add-link-forbidden.hide
            = t('admin-topics-form.message.add-link-forbidden')
        input.btn.btn-success.hide(type='submit', value=t('admin-topics-form.button.submit'))
    include commands
